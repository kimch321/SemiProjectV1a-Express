{{#section 'css'}}
    <style>
        #writefrm { width: 560px; }
    </style>
{{/section}}
{{#section 'script'}}
    <script>
        function processWrite () {
            let writefrm = document.write; // 이자리는 폼의 이름이 온다.
            if (writefrm.title.value === '') alert('제목을 입력하세요');
            else if (writefrm.contents.value === '') alert('본문을 입력하세요')
            else {
                writefrm.method = 'post';
                writefrm.enctype = 'application/x-www-form-urlencoded';
                writefrm.submit();
            }
        }

        let submitbtn = document.querySelector('#submitbtn');
        submitbtn.addEventListener('click',processWrite);
        let title = document.querySelector('#title');
        let uid = document.querySelector('#uid');
        let contents = document.querySelector('#contents');
    </script>
{{/section}}
    <main>
        <div id="main">
            <h2>게시판 새글쓰기</h2>
            <form name="write" id="writefrm">
                <div><label for="title">제목</label>
                    <input type="text" name="title" id="title"></div>

                <div><label for="uid">작성자</label>
                    <input type="text" name="uid" id="uid"
                           value="siestageek" readonly></div>

                <div><label for="contents" class="drgup">본문</label>
                    <textarea name="contents" id="contents"
                              rows="7" cols="55"></textarea></div>

                <div><label></label>
                    <button type="button" id="submitbtn">입력완료</button>
                    <button type="reset">다시입력</button>
                </div>
            </form>
        </div>
    </main>