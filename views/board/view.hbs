{{#section 'css'}}
    <style>
        #view { width: 700px; margin: 0 auto; }
        label { display: inline-block; width: 110px;
            text-align: right; font-weight: bold;
            margin-right: 10px }
        #contents { border: 1px solid #eeeeee;
            display: inline-block;
            width: 560px; min-height: 350px }
    </style>
{{/section}}
{{#section 'script'}}
{{/section}}
    <main>
        <h2>게시판 본문</h2>
        <div id="view">
            {{#views}}
            <div><label>제목</label>
                <span>{{title}}</span></div>

            <div><label>작성자</label>
                <span>{{uid}}</span></div>

            <div><label>작성일</label>
                <span>{{regdate}}({{views}})</span></div>

            <div><label class="drgup">본 문</label>
                <span id="contents">{{contents}}</span></div>

            <div>
            {{/views}}
                <label></label>
                {{#if session.userid}}
                    <button type="button"
                            onclick="location.href='/board/write'">새글쓰기</button>
                {{/if}}
                <button type="button" onclick="location.href='/board/list'">목록으로</button>
                {{#if (eq session.userid views.[0].uid)}}
<!--                    session.userid는 로그인한 사용자의 ID이며 bds. bds.[0].userid은 게시물을 작성한 사용자의 ID-->
                    <button type="button" id="updatebtn">수정하기</button>
                    <button type="button" id="deletebtn">삭제하기</button>
                {{/if}}
            </div>
        </div>
    </main>
